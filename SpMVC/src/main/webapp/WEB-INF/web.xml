<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <!-- this is defining that all request will go thru spring 
  dispatcher servlet. spring will handle all requests. from here this servlet will redirect to its 
  proper xml files to handle those requests -->
  <servlet>
		<servlet-name>add</servlet-name>
		<servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>add</servlet-name>
		<url-pattern>/</url-pattern> <!-- all requests will go thrur dispatcher servlet -->
	</servlet-mapping>
  
  
</web-app>
